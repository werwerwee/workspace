package variable;

public class VariableTest {
	
	// 지바프로그램의 시작끝을 명시하는 method(함수)
	// main method가 호출되고 기능이 완료되면 자바프로그램도 종료
	public static void main(String[] args) {
		// 변수 선언부
		// byte 는 키워드로 사용됨으로 식별자로 사용 불가
		// byte byte;
		// 1byte 크기의 정수를 저장할 공간을 마련하고
		// num 이라는 식별자로 접근 할 수 있도록 선언
		byte num;
		
		// System.out.println(num); 
		// num 이라는 저장공간에 10 이라는 값으로 저장 - 초기화
		num = 10;
		
		System.out.println(num);
		
		//식별자를 중복해서 사용 불가
		// byte num = 20;
		
		/*
		 범위 주석
		 byte type의 num 이라는 변수에 10이라는 값을 대입(저장)
		 num == 10
		 
		 byte == 1byte 크기의 정수값을 저장
		 1byte == 8bit
		 표현 할 수 있는 값의 갯수는 2^8개
		 */
		
		// 0B-	정수를 이진수로 표현
		byte bNum = 0B00001010;	// 10
		
		// octa 앞에 0이 붙으면 8진수
		byte oNum = 012; // 10
		
		//0X - 16 진수
		byte xNum = 0XA; // 10
		
		
		// short - 2바이트크기의 정수
		// 65536 개의 정수를 표현
		// -32768 ~ 32767;
		// 범위를 벗어나는 데이터는 지정이 불가
		
		short s1 = 32767;
		
		System.out.println(s1);
		
		// 문자 타입 (character)
		// 아스키 코드 0~127의 문자를 표현
		// 아스키 코드를 확장시킨 유니코드(UTF-8) 문자정보를 활용하는 데이터 타입
		// 0~65535 의 양의 정수값으로 문자 표현
		// 한개의 문자를 표현하는 표현식		'A'		'B'
		char c = 'A';
		//c = 'AB';
		
		c = 65;
		System.out.println(c);
		
		// c = -1; 0부터 양의 정수만 가능
		// c ="최고" 데이터 타입이 틀리면 저장 불가
		
		
		// int 4byte 공간에 정수값을 저장(integer)
		// 변수에 저장하고 사용하기 위하여 명시 또는 표기된 값을 '리터럴' 이라고 한다
		// 정수형 리터럴은 기본적으로 int type
		// -2,147,483,648 ~ 2,147,483,647 까지 저장
		int i =1000000;
		// i = 475647845653;
		i = 10;
		System.out.println(Integer.MAX_VALUE);
		System.out.println(Integer.MIN_VALUE);
		
		// long 8byte 의 정수저장
				
		long l = 2222222222L;
		
		System.out.println(Long.MAX_VALUE);
		System.out.println(Long.MIN_VALUE);
	}
	
}


















